		    substCount++;
		}
		// Masking several common character combinations with an token
		else if ( ( c < buffer.length() - 2 ) && buffer.charAt( c ) =3D=3D 's' =
&&
		    buffer.charAt( c + 1 ) =3D=3D 'c' && buffer.charAt( c + 2 ) =3D=3D =
'h' )
		{
